{{#if session.isAuthenticated}}
  <div class="bs-form">
    <form {{action 'createPost' on='submit'}} class="blog-post-form">
      <div class="form-group {{if titleError 'has-error'}}">
        {{input id='title'
                placeholder='Enter title'
                value=post.title
                class='blog-post-form__title-input form-control'}}
                <!-- onblur=(action 'validateProperty' post title) -->
      </div>

      <div class="form-group">
        {{textarea id='description'
                   placeholder='Enter your text here...'
                   value=post.description
                   class='blog-post-form__description-input form-control'
                   rows=3}}
      </div>

      {{#if (or post.errors errorMessage)}}
        <ul class="blog-post-form__error text-danger">
          {{#if errorMessage}}
            <li>{{errorMessage.errors}}</li>
          {{/if}}
          {{#each post.errors as |errorSet|}}
            {{#each errorSet.validation as |error|}}
              <li>{{error}}</li>
            {{/each}}
          {{/each}}
        </ul>
      {{/if}}

      <button type="submit" class="blog-post-form__submit btn btn-default">Create</button>
    </form>
  </div>
{{/if}}
